        "config/index.ts",
        "config/vars.ts",
        "getBackups.ts",
        "getClusterSpecs.ts",
        "getClusters.ts",
        "getProjects.ts",
        "getRestores.ts",
        "import.ts",
        "index.ts",
        "provider.ts",
        "restore.ts",
        "types/index.ts",
        "types/input.ts",
        "types/output.ts",
        "utilities.ts"
    ]
}
